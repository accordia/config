{
    "name": "daikon/config",
    "type": "library",
    "description": "Config loader and provider.",
    "keywords": [ "config" ],
    "homepage": "https://github.com/daikon-cqrs/config",
    "license": "MPL-2.0",
    "support": {
        "issues": "https://github.com/daikon-cqrs/config/issues"
    },
    "prefer-stable": true,
    "require": {
        "php": "^7.2",
        "symfony/finder": "^4.1",
        "symfony/yaml": "^4.1",
        "beberlei/assert": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.3",
        "sebastian/phpcpd": "^4.1",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Daikon\\Config\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Daikon\\Tests\\Config\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src/ tests/",
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src/ tests/",
        "copy-paste-detector": "phpcpd src/ tests/ || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
