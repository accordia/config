{
    "name": "daikon/config",
    "type": "library",
    "description": "Config loader and provider.",
    "keywords": [ "config" ],
    "homepage": "https://github.com/daikon-cqrs/config",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "shrink0r/php-schema": "^0.3",
        "symfony/finder": "^3.3",
        "symfony/yaml": "^3.3",
        "beberlei/assert": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.0",
        "satooshi/php-coveralls": "master@dev"
    },
    "autoload": {
        "psr-4": { "Daikon\\Config\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\Config\\": "tests" }
    },
    "scripts": {
        "build": [
            "@test",
            "@code-sniffer",
            "@validate-json"
        ],
        "test": "phpunit",
        "code-sniffer": "phpcs --extensions=php --standard=psr2 src tests",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 src",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
