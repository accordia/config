{
    "name": "daikon/config",
    "type": "library",
    "description": "Config loader and provider.",
    "keywords": [ "config" ],
    "homepage": "https://github.com/daikon-cqrs/config",
    "license": "MPL-2.0",
    "support": {
        "issues": "https://github.com/daikon-cqrs/config/issues"
    },
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "shrink0r/php-schema": "^0.3",
        "symfony/finder": "^3.3",
        "symfony/yaml": "^3.3",
        "beberlei/assert": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.0",
        "satooshi/php-coveralls": "master@dev",
        "vimeo/psalm": "^0.3.47",
        "sebastian/phpcpd": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Daikon\\Config\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Daikon\\Tests\\Config\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [
            "@sniff",
            "@tests"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json"
        ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src/ tests/",
        "copy-paste-detector": "phpcpd src/ tests/",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
